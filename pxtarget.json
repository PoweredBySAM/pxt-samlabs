{

    "id": "samlabs-pxt-target",
    "name": "SAM Script",
    "title": "SAM Script- Blocks / Javascript and Python editor",
    "description": "A Custom Blocks / JavaScript and Python code editor based on MakeCode for SAMLabs Devices",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "packages": false
    },
    "bundleddirs": [
        "libs/core"
    ],
    "runtime": {
      "sim":true,
      "mathBlocks": true,
      "loopsBlocks": true,
      "logicBlocks": true,
      "variablesBlocks": true,
      "textBlocks": true,
      "functionBlocks": true,
      "listsBlocks": true
    },
    "simulator": {
        "autoRun": false,
        "aspectRatio": 1
    },
    "compile": {
        "isNative": false,
        "hasHex": false
    },
    "appTheme": {
        "simulator": true,
        "logoUrl": "https://github.com/Microsoft/pxt-sample",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "betaUrl": "https://makecode.com/",
        "docMenu": [
        ],
        "coloredToolbox": true,
        "invertedMenu": true,
        "invertedToolbox": false,
        "invertedMonaco": false,
        "monacoToolbox": true,
        "blocksCollapsing": true,
        "accessibleBlocks": true,
        "showHomeScreen": true,
        "homeScreenHero": "./static/SAMScript-Banner.png",
        "disableBlockIcons": false,
        "blocklyOptions": {
            "grid": {
                "spacing": 20,
                "length": 100,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": true
            }
        },
        "blockColors":{
            "button":"#e3008c",
            "buzzer":"#d400d4",
            "dCMotor":"#32cd32",
            "heatSensor":"#3455db",
            "RGB_LED":"#4169e1",
            "lightSensor":"#FF5733",
            "pressureSensor":"#00aa00",
            "proximitySensor": "#1e90ff",
            "servoMotor": "#ff69b4",
            "slider": "#ff4500",
            "tiltSensor":"#9400d3",
            "general": "#C44E50"
        },
        "simAnimationEnter": "fly right in",
        "simAnimationExit": "fly right out",
        "scriptManager": true,
        "debugger": true,
        "print": true,
        "highContrast": true,
        "python": true,
        "pythonToolbox": true,
        "greenScreen": true,
        "monacoColors": {
            "editor.background": "#ecf0f1"
        }
    }
}
